{% if section.settings.show_section %}
  {% include 'include-image-with-text-fullbleed' %}
{% endif %}

{% schema %}
{
  "name": "Full Bleed",
  "tag": "section",
  "class": "about-us-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Display Section",
      "default": true
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "1800 x 900px recommended"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "html",
      "id": "text",
      "label": "Custom HTML",
      "default": "<div><p>Some HTML content</p></div>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Advanced"
    },
    {
      "type": "text",
      "id": "css_class",
      "label": "CSS Class"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Custom CSS"
    }
  ]
}
{% endschema %}
