          {
            "type": "select",
            "id": "text_alignment",
            "label": "Text alignment",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "center",
                "label": "Center"
              },
              {
                "value": "justify",
                "label": "Justify"
              },
              {
                "value": "right",
                "label": "Right"
              }
            ]
