{% assign type = "block" %}
{% assign align = "image-right" %}

{% if section.settings.show_section %}
  {% for block in section.blocks %}
    <div 
      id="block-{{block.id}}" 
      class="block block--{{ block.type }}"
    >
    {% case block.type %}
      {% when 'rich_text' %}
        {% include 'include-rich-text' %}
      {% when 'video' %}
        {% include 'include-video' %}
      {% when 'text-with-image' %}
        {% if align == "image-right" %}
          {% assign align = "image-left" %}
        {% else %}
          {% assign align = "image-right" %}
        {% endif %} 
        {% include 'include-text-with-image', align: align %}
    {% endcase %}
    </div>
  {% endfor %}
{% endif %}

{% schema %}
  {
    "name": "Batch",
    "class": "about-us-section about-us-batch coffee-background-bottom-corners",
    "tag": "section",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_section",
        "label": "Display Section",
        "default": true
      }
    ],
    "blocks": [
