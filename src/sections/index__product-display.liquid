{% assign product = all_products[section.settings.product_of_the_month] %}
{% comment %}
** Image with text - dynamic **
- Draggable section
- Uses blocks
{% endcomment %}

{% assign id = section.id %}
{% comment %} Layout {% endcomment %}
{% assign show_gutter = section.settings.show_gutter %}
{% assign width = section.settings.width %}
{% assign padding_top = section.settings.padding_top %}
{% assign padding_bottom = section.settings.padding_bottom %}
{% assign animation = section.settings.animation %}
{% comment %} Advanced {% endcomment %}
{% assign css_class = section.settings.css_class %}
{% assign custom_css = section.settings.custom_css %}

{% comment %} Section specific CSS {% endcomment %}
{% style %}
  #shopify-section-{{ id }} {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    {% if width == 'wide' %}
      width: 100%;
    {% endif %}
  }
  {% include 'css-loop', css: custom_css, id: id %}
{% endstyle %}

{% comment %} HTML markup {% endcomment %}
<section 
  class="section {{ css_class }} py-5 monthly-product" 
  {% if animation != "none" %}data-scroll-class="{{ animation }}"{% endif %}>

  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="monthly-product__subtitle has-coffee-bean">
          <h3 class="section-title">Try Our Coffee <br><b>of the month</b></h3>
        </div>

        <div class="d-none d-md-block">
          <h4 class="text-center">{{ product.title }}</h4>
          <p class="d-none d-md-block">
            {{ product.description }}
          </p>
          <div class="text-center">
            <a class="btn btn-primary" href="/product/{{product.handle}}">View Product</a>
          </div>
        </div>

      </div>

      <div class="col-md-5 ml-auto monthly-product__image">
        {% assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img 
          id="{{ img_id }}"
          class="lazyload"
          src="{{ section.settings.image | img_url }}"
          data-src="{{ img_url }}"
          data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
          data-aspectratio="{{ section.settings.image.aspect_ratio }}"
          data-sizes="auto"
          alt="{{ section.settings.image.alt}}">
      </div>

      <div class="col d-md-none">
        <div class="text-center">
          <h4>{{ product.title }}</h4>
          <a class="btn btn-primary" href="/product/{{product.handle}}">Buy Now</a>
        </div>
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product",
  "class": "index-monthly-product",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "standard",
      "options": [
        {
          "value": "standard",
          "label": "Standard"
        },
        {
          "value": "wide",
          "label": "Wide"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top spacing",
      "min": 0,
      "max": 80,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom spacing",
      "default": 0,
      "min": 0,
      "max": 80,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "animation",
      "label": "Animation",
      "default": "none",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "fadeIn",
          "label": "Fade in"
        },
        {
          "value": "fadeInDown",
          "label": "Fade in down"
        },
        {
          "value": "fadeInLeft",
          "label": "Fade in left"
        },
        {
          "value": "fadeInRight",
          "label": "Fade in right"
        },
        {
          "value": "slideInLeft",
          "label": "Slide in left"
        },
        {
          "value": "slideInRight",
          "label": "Slide in right"
        },
        {
          "value": "zoomIn",
          "label": "Zoom in"
        }
      ]
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "product",
      "id": "product_of_the_month",
      "label": "Product of the Month",
      "info": "Choose a product to display"
    },
    {
      "type": "checkbox",
      "id": "use_product_desc",
      "label": "Use Product Desc",
      "default": true,
      "info": "Check to populate section with product description"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image"
    },
    {
      "type": "header",
      "content": "Advanced"
    },
    {
      "type": "text",
      "id": "css_class",
      "label": "CSS Class"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Custom CSS"
    }
  ],
  "presets": [
    {
      "name": "Product Display",
      "category": "Image"
    }
  ]
}
{% endschema %}
