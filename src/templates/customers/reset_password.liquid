<!-- /templates/customers/reset_password.liquid -->
<div class="container py-5">
  <div class="">
    <div class="">
      <div class="section-header">
        <div class="">
          {% form 'reset_customer_password', class: "text-center" %}

            <h1 class="text-center">{{ 'customer.reset_password.title' | t }}</h1>

            <p class="text-center">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

            {%- if form.errors -%}
              <div class="form-message form-message--error">
                {{ form.errors | default_errors }}
              </div>
            {%- endif -%}

            <div class="d-flex flex-column mt-5">
              <span>
                <label class="sr-only" for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
                <input type="password" placeholder="{{ 'customer.reset_password.password' | t }}" value="" name="customer[password]" id="ResetPassword" class="{% if form.errors contains 'password' %} input--error{% endif %}">
              </span>

              <span>
                <label class="sr-only" for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
                <input type="password" placeholder="{{ 'customer.reset_password.password_confirm' | t }}" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="{% if form.errors contains 'password_confirmation' %} input--error{% endif %}">
              </span>
            </div>

            <input type="submit" class="btn btn-primary text-center" value="{{ 'customer.reset_password.submit' | t }}">
          {% endform %}
        </div>

      </div>
    </div>
  </div>
</div>