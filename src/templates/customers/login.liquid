<div class="container" style="    display: flex;
flex-direction: column;
justify-content: center;
height: 100%;
flex-grow: 1;">
  <div class="row text-center" style="justify-content: center;">
    <div id="customer">
      <div class="template_header">
        <h2 class="section-title has-coffee-bean mb-4"><b>Sign In</b></h2>
      </div>
      
      {% form 'customer_login' %}

        <div class="m-auto" style="max-width: 300px;">
          {{ form.errors | default_errors }}
          
          <div id="login_email" class="">
            <input type="email" value="" placeholder="your email" name="customer[email]" id="customer_email" class="large" />
          </div>
          
          {% if form.password_needed %}
            <div id="login_password" class="">
              <input type="password" placeholder="password" value="" name="customer[password]" id="customer_password" class="large password" />
            </div>
          {% endif %}
        </div>
        
        <div class="action_bottom mb-5">
          <p>
            <input class="btn btn-primary" type="submit" value="{{ 'customer.login.sign_in' | t }}" />
          </p>
          <!--<span class="note"><a href="{{ shop.url }}">{{ 'customer.login.cancel' | t }}</a></span>-->
          <div id="forgot_password">
            <a href="#" onclick="showRecoverPasswordForm();return false;">{{ 'customer.login.forgot_password' | t }}</a>
          </div>        
          <span class="note">Don't have an account? <a href="/account/register"><span>Create one!</span></a></span>
          
        </div>
      {% endform %}

    </div>
    
    <div id="recover-password" style='display:none'>
      {% form 'recover_customer_password' %}
      {% if form.posted_successfully? %}
      {% assign reset_success = true %}
      {% endif %}
      <div class="template_header">
        <h2 class="title">{{ 'customer.recover_password.title' | t }}</h2>
        {% unless reset_success %}
        <p class="note">{{ 'customer.recover_password.subtext' | t }}</p>
        {% endunless %}
      </div>
      
      
      {{ form.errors | default_errors }}
      
      {% if reset_success %}
      
      <div class="action_bottom">
        <p>{{ 'customer.recover_password.success' | t }}</p>
        <a href="#" class="button" onclick="hideRecoverPasswordForm();return false;">{{ 'customer.login.sign_in' | t }}</a>
      </div>
      
      {% else %}
      
      <div id="recover_email" class="clearfix large_form">
        <label for="email" class="large">{{ 'customer.recover_password.email' | t }}</label>
        <input type="email" placeholder="your email" value="" name="email" id="recover-email" class="large" />
      </div>
      <div class="action_bottom">
        <p>
          <input class="btn btn-primary" type="submit" value="{{ 'customer.recover_password.submit' | t }}" />
        </p>
        <span class="note"><a href="#" onclick="hideRecoverPasswordForm();return false;">{{ 'customer.recover_password.cancel' | t }}</a></span>
      </div>
      
      {% endif %}
      
      {% endform %}
    </div>
  </div><!-- /layout-column-half-left" -->

  {% if shop.checkout.guest_login %}
  <div id="guest" class="layout-column-half-right">
    <div class="template_header">
      <h2 class="title">{{ 'customer.login.guest_title' | t }}</h2>
    </div>
    {% form 'guest_login' %}
    <input class="btn" type="submit" value="{{ 'customer.login.guest_continue' | t }}" />
    {% endform %}
  </div>
  {% endif %}
</div>


<script type="text/javascript">
  function showRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'inline-block';
    document.getElementById('customer').style.display='none';
  }

  function hideRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'none';
    document.getElementById('customer').style.display = 'inline-block';
  }

  {% if reset_success %}showRecoverPasswordForm();{% endif %}
  if (window.location.hash == '#recover') { showRecoverPasswordForm() }
</script>
