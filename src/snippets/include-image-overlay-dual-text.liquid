{% assign product = all_products[section.settings.product_of_the_month] %}
{% comment %}
** Image with text - dynamic **
- Draggable section
- Uses blocks
{% endcomment %}

{% assign id = section.id %}
{% comment %} Layout {% endcomment %}
{% assign show_gutter = section.settings.show_gutter %}
{% assign width = section.settings.width %}
{% assign padding_top = section.settings.padding_top %}
{% assign padding_bottom = section.settings.padding_bottom %}
{% assign animation = section.settings.animation %}
{% comment %} Content {% endcomment %}
{% assign header_one = section.settings.headerOne %}
{% assign header_two = section.settings.headerTwo %}
{% assign paragraph_one = section.settings.paragraphOne %}
{% assign paragraph_two = section.settings.paragraphTwo %}
{% assign align_content = section.settings.alignContent %}
{% comment %} Advanced {% endcomment %}
{% assign css_class = section.settings.css_class %}
{% assign custom_css = section.settings.custom_css %}

{% comment %} Section specific CSS {% endcomment %}
{% style %}
  #shopify-section-{{ id }} {
    position: relative;
    background-image: url("{{ section.settings.background_image | img_url: '1024x' }}");
    background-size: cover;
    background-position: center;
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
  }

  {% include 'css-loop', css: custom_css, id: id %}
{% endstyle %}

<div class="background-fade background-fade--{{align_content}}"></div>
<div class="image-with-dual-text {{ css_class }}">

  {% if section.settings.ripTop != "none" %}
  <div class="rip-top">
    {% assign rip_filename = "torn-element__" | append: section.settings.ripTop | append: '.svg' %}
    {% include {{rip_filename}} %}
  </div>
  {% endif %}

  <div class="container">
    <div class="row">
      
      <div class="col-md-6 {% if align_content == 'right' %}offset-md-6{% endif %}">

        <h3 class="has-coffee-bean section-title">
          {{ header_one }}
        </h3>
        {{ paragraph_one }}

        <h3 class="has-coffee-bean section-title">
          {{ header_two }}
        </h3>
        {{ paragraph_two }}

      </div>

    </div>
  </div>

{% if section.settings.ripBottom != "none" %}
<div class="rip-bottom">
  {% assign rip_filename = "torn-element__" | append: section.settings.ripBottom | append: '.svg' %}
  {% include {{rip_filename}} %}
</div>
{% endif %}

</div>