{% if section.settings.backgroundImage %}
{% assign background_image = section.settings.backgroundImage %}
{% else %}
{% assign background_image = collection.image %}
{% endif %}

<header 
  class="page-header page-header--{{ template.name }}"
  style="background-image: url('{{ background_image | img_url: '1024x' }}')">
  <div class="container text-center">
    <h1 class="section-title {% if template.name == 'page' %}has-coffee-bean has-coffee-bean--on-dark{% endif %}">
      {% if template.name == 'page' %}
      <b>{{ page.title }}</b>
      {% else %}
      <b>{{ collection.title }}</b>
      {% endif %}
    </h1>
    {% if template.name == 'collection' %}
    {% render 'breadcrumbs' %}
    {% endif %}
  </div>
</header>
